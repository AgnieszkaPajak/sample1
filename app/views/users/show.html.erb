<% provide(:title, @user.name) %>
  <%= image_tag(@user.avatar.url, :alt => "no image", :size => "64") %>
  <h1><%= @user.name %></h1>
  <br/>
  <%= image_tag "http://maps.google.com/maps/api/staticmap?size=800x300&sensor=false&zoom=13&markers=#{@user.latitude}%2C#{@user.longitude}" %>
  <br/>
  <div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    
      
   
      
    <%= will_paginate @microposts %>
  <% end %>
  </div>

